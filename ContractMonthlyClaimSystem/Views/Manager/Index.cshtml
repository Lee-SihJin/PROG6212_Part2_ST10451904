@model ContractMonthlyClaimSystem.Models.ViewModels.ManagerDashboardViewModel
@{
    ViewData["Title"] = "Manager Dashboard";
}

<div class="container-fluid">
    <!-- Welcome Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <h2 class="card-title">
                                <i class="fas fa-user-cog me-2"></i>Welcome, Manager!
                            </h2>
                            <p class="card-text mb-0">
                                Final approval and oversight of monthly claims
                            </p>
                        </div>
                        <div class="col-md-4 text-end">
                            <div class="bg-light text-dark p-3 rounded">
                                <h5 class="mb-1">Current Month</h5>
                                <h4 class="text-primary mb-0">@DateTime.Now.ToString("MMMM yyyy")</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@Model.PendingApprovalCount</h4>
                            <p class="card-text">Pending Final Approval</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-clock fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@Model.ApprovedThisMonthCount</h4>
                            <p class="card-text">Approved This Month</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-check-circle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">R @Model.TotalAmountApproved.ToString("N0")</h4>
                            <p class="card-text">Total Approved Amount</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-money-bill-wave fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-secondary">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@Model.TotalLecturersCount</h4>
                            <p class="card-text">Active Lecturers</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-chalkboard-teacher fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Claims for Final Approval -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-clipboard-check me-2"></i>Claims for Final Approval
                        <span class="badge bg-light text-dark ms-2">@Model.PendingApprovalClaims.Count</span>
                    </h4>
                </div>
                <div class="card-body">
                    @if (Model.PendingApprovalClaims.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Claim ID</th>
                                        <th>Lecturer</th>
                                        <th>Claim Month</th>
                                        <th>Hours</th>
                                        <th>Amount</th>
                                        <th>Coordinator</th>
                                        <th>Approved Date</th>
                                        <th>Coordinator Notes</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var claim in Model.PendingApprovalClaims)
                                    {
                                        <tr>
                                            <td>#@claim.ClaimId</td>
                                            <td>
                                                <strong>@claim.Lecturer?.FullName</strong>
                                                <br>
                                                <small class="text-muted">@claim.Lecturer?.EmployeeNumber</small>
                                            </td>
                                            <td>@claim.DisplayMonth</td>
                                            <td>@claim.TotalHours.ToString("N1")</td>
                                            <td class="fw-bold text-success">R @claim.TotalAmount.ToString("N2")</td>
                                            <td>
                                                @if (claim.Coordinator != null)
                                                {
                                                    <span>@claim.Coordinator.FullName</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">N/A</span>
                                                }
                                            </td>
                                            <td>@claim.CoordinatorApprovalDate?.ToString("dd MMM yyyy")</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(claim.ManagerComments))
                                                {
                                                    <span title="@claim.ManagerComments" data-bs-toggle="tooltip">
                                                        @(claim.ManagerComments.Length > 30 ? claim.ManagerComments.Substring(0, 30) + "..." : claim.ManagerComments)
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No notes</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group-vertical btn-group-sm" role="group">
                                                    <a asp-controller="Manager"
                                                       asp-action="ClaimDetails"
                                                       asp-route-id="@claim.ClaimId"
                                                       class="btn btn-outline-primary mb-1">
                                                        <i class="fas fa-eye me-1"></i>Review
                                                    </a>
                                                    <button type="button"
                                                            class="btn btn-outline-success mb-1"
                                                            onclick="finalApprove(@claim.ClaimId, '@claim.Lecturer?.FullName', '@claim.DisplayMonth', @claim.TotalAmount)">
                                                        <i class="fas fa-check me-1"></i>Approve
                                                    </button>
                                                    <button type="button"
                                                            class="btn btn-outline-danger"
                                                            onclick="finalReject(@claim.ClaimId, '@claim.Lecturer?.FullName', '@claim.DisplayMonth', @claim.TotalAmount)">
                                                        <i class="fas fa-times me-1"></i>Reject
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                            <h5 class="text-success">All Caught Up!</h5>
                            <p class="text-muted">There are no claims pending final approval.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Reports Section -->
    <div class="row mt-4">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-chart-bar me-2"></i>Monthly Overview
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card bg-light mb-3">
                                <div class="card-body text-center">
                                    <h3 class="text-success">@Model.ApprovedThisMonthCount</h3>
                                    <p class="mb-0">Claims Approved This Month</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card bg-light mb-3">
                                <div class="card-body text-center">
                                    <h3 class="text-danger">@Model.RejectedThisMonthCount</h3>
                                    <p class="mb-0">Claims Rejected This Month</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card bg-light mb-3">
                                <div class="card-body text-center">
                                    <h3 class="text-primary">R @Model.TotalAmountApproved.ToString("N0")</h3>
                                    <p class="mb-0">Total Approved Amount</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card bg-light mb-3">
                                <div class="card-body text-center">
                                    <h3 class="text-warning">@Model.AverageProcessingDays.ToString("N1")</h3>
                                    <p class="mb-0">Avg. Processing Days</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-history me-2"></i>Recently Processed
                    </h4>
                </div>
                <div class="card-body">
                    @if (Model.RecentlyProcessedClaims.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var claim in Model.RecentlyProcessedClaims.Take(5))
                            {
                                <div class="list-group-item px-0">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">@claim.Lecturer?.FullName</h6>
                                        <small class="text-muted">@claim.ManagerApprovalDate?.ToString("dd MMM")</small>
                                    </div>
                                    <p class="mb-1 small">@claim.DisplayMonth - R @claim.TotalAmount.ToString("N2")</p>
                                    <span class="badge @GetStatusBadgeClass(claim.Status)">
                                        @claim.Status
                                    </span>
                                </div>
                            }
                        </div>
                        <div class="text-center mt-3">
                            <a asp-controller="Manager" asp-action="ProcessedClaims" class="btn btn-sm btn-outline-primary">
                                View All Processed Claims
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-3">
                            <i class="fas fa-inbox fa-2x text-muted mb-2"></i>
                            <p class="text-muted mb-0">No claims processed yet</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Final Approval Modal -->
<div class="modal fade" id="finalApprovalModal" tabindex="-1" aria-labelledby="finalApprovalModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="finalApprovalModalLabel">
                    <i class="fas fa-check-double me-2"></i>Final Approval
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Grant final approval for this claim?</p>
                <div class="alert alert-info">
                    <strong id="approvalLecturerName"></strong><br>
                    <span id="approvalClaimMonth"></span><br>
                    <strong>Amount: R <span id="approvalAmount"></span></strong>
                </div>
                <div class="mb-3">
                    <label for="finalApprovalNotes" class="form-label">Final Approval Notes (Optional)</label>
                    <textarea class="form-control" id="finalApprovalNotes" rows="3"
                              placeholder="Add any final notes or comments..."></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success" id="confirmFinalApproveBtn">Grant Final Approval</button>
            </div>
        </div>
    </div>
</div>

<!-- Final Rejection Modal -->
<div class="modal fade" id="finalRejectionModal" tabindex="-1" aria-labelledby="finalRejectionModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="finalRejectionModalLabel">
                    <i class="fas fa-ban me-2"></i>Final Rejection
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Reject this claim with final decision?</p>
                <div class="alert alert-warning">
                    <strong id="rejectionLecturerName"></strong><br>
                    <span id="rejectionClaimMonth"></span><br>
                    <strong>Amount: R <span id="rejectionAmount"></span></strong>
                </div>
                <div class="mb-3">
                    <label for="finalRejectionReason" class="form-label">Final Rejection Reason *</label>
                    <textarea class="form-control" id="finalRejectionReason" rows="3"
                              placeholder="Provide detailed reason for final rejection..." required></textarea>
                    <div class="form-text">This reason will be recorded and may be reviewed.</div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmFinalRejectBtn">Final Rejection</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let currentClaimId = null;

        function finalApprove(claimId, lecturerName, claimMonth, amount) {
            currentClaimId = claimId;
            document.getElementById('approvalLecturerName').textContent = lecturerName;
            document.getElementById('approvalClaimMonth').textContent = `Claim for ${claimMonth}`;
            document.getElementById('approvalAmount').textContent = amount.toFixed(2);
            document.getElementById('finalApprovalNotes').value = '';

            const modal = new bootstrap.Modal(document.getElementById('finalApprovalModal'));
            modal.show();
        }

        function finalReject(claimId, lecturerName, claimMonth, amount) {
            currentClaimId = claimId;
            document.getElementById('rejectionLecturerName').textContent = lecturerName;
            document.getElementById('rejectionClaimMonth').textContent = `Claim for ${claimMonth}`;
            document.getElementById('rejectionAmount').textContent = amount.toFixed(2);
            document.getElementById('finalRejectionReason').value = '';

            const modal = new bootstrap.Modal(document.getElementById('finalRejectionModal'));
            modal.show();
        }

        document.getElementById('confirmFinalApproveBtn').addEventListener('click', function() {
            const notes = document.getElementById('finalApprovalNotes').value;
            submitFinalDecision(currentClaimId, true, notes);
        });

        document.getElementById('confirmFinalRejectBtn').addEventListener('click', function() {
            const reason = document.getElementById('finalRejectionReason').value;
            if (!reason.trim()) {
                alert('Please provide a rejection reason.');
                return;
            }
            submitFinalDecision(currentClaimId, false, reason);
        });

        function submitFinalDecision(claimId, isApproved, notes) {
            const button = isApproved ? document.getElementById('confirmFinalApproveBtn') : document.getElementById('confirmFinalRejectBtn');
            const originalText = button.innerHTML;
            button.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...';
            button.disabled = true;

            const form = document.createElement('form');
            form.method = 'post';
            form.action = '/Manager/ProcessFinalApproval';

            const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
            const tokenInput = document.createElement('input');
            tokenInput.type = 'hidden';
            tokenInput.name = '__RequestVerificationToken';
            tokenInput.value = token;
            form.appendChild(tokenInput);

            const claimIdInput = document.createElement('input');
            claimIdInput.type = 'hidden';
            claimIdInput.name = 'claimId';
            claimIdInput.value = claimId;
            form.appendChild(claimIdInput);

            const statusInput = document.createElement('input');
            statusInput.type = 'hidden';
            statusInput.name = 'isApproved';
            statusInput.value = isApproved;
            form.appendChild(statusInput);

            const notesInput = document.createElement('input');
            notesInput.type = 'hidden';
            notesInput.name = 'notes';
            notesInput.value = notes;
            form.appendChild(notesInput);

            document.body.appendChild(form);
            form.submit();
        }

        // Close modals on hidden
        document.getElementById('finalApprovalModal').addEventListener('hidden.bs.modal', function() {
            currentClaimId = null;
        });

        document.getElementById('finalRejectionModal').addEventListener('hidden.bs.modal', function() {
            currentClaimId = null;
        });
    </script>
}

@functions {
    string GetStatusBadgeClass(ClaimStatus status)
    {
        return status switch
        {
            ClaimStatus.Draft => "bg-secondary",
            ClaimStatus.Submitted => "bg-warning",
            ClaimStatus.CoordinatorApproved => "bg-info",
            ClaimStatus.ManagerApproved => "bg-success",
            ClaimStatus.Paid => "bg-success",
            ClaimStatus.Rejected => "bg-danger",
            _ => "bg-secondary"
        };
    }
}