@model MonthlyClaim
@{
    ViewData["Title"] = "Processed Claim Details";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card @(Model.Status == ClaimStatus.ManagerApproved ? "bg-success" : "bg-danger") text-white">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <h2 class="card-title">
                                <i class="fas @(Model.Status == ClaimStatus.ManagerApproved ? "fa-check-double" : "fa-ban") me-2"></i>
                                Processed Claim Details
                            </h2>
                            <p class="card-text mb-0">
                                Claim #@Model.ClaimId - @Model.DisplayMonth
                                <span class="badge bg-light text-dark ms-2">@Model.Status</span>
                            </p>
                        </div>
                        <div class="col-md-4 text-end">
                            <div class="bg-light text-dark p-3 rounded">
                                <h5 class="mb-1">Final Decision</h5>
                                <h4 class="@(Model.Status == ClaimStatus.ManagerApproved ? "text-success" : "text-danger") mb-0">
                                    @Model.Status
                                </h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Claim Information -->
    <div class="row">
        <!-- Left Column - Claim Details -->
        <div class="col-md-8">
            <!-- Basic Claim Information -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>Claim Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <th width="40%">Claim ID:</th>
                                    <td>#@Model.ClaimId</td>
                                </tr>
                                <tr>
                                    <th>Lecturer:</th>
                                    <td>
                                        <strong>@Model.Lecturer?.FullName</strong>
                                        <br>
                                        <small class="text-muted">@Model.Lecturer?.EmployeeNumber</small>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Claim Month:</th>
                                    <td>@Model.DisplayMonth</td>
                                </tr>
                                <tr>
                                    <th>Submission Date:</th>
                                    <td>@Model.SubmissionDate.ToString("dd MMM yyyy HH:mm")</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <th width="40%">Total Hours:</th>
                                    <td class="fw-bold">@Model.TotalHours.ToString("N1") hours</td>
                                </tr>
                                <tr>
                                    <th>Hourly Rate:</th>
                                    <td>R @Model.Lecturer?.HourlyRate.ToString("N2")</td>
                                </tr>
                                <tr>
                                    <th>Total Amount:</th>
                                    <td class="fw-bold fs-5 @(Model.Status == ClaimStatus.ManagerApproved ? "text-success" : "text-danger")">
                                        R @Model.TotalAmount.ToString("N2")
                                    </td>
                                </tr>
                                <tr>
                                    <th>Current Status:</th>
                                    <td>
                                        <span class="badge @GetStatusBadgeClass(Model.Status)">
                                            @Model.Status
                                        </span>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Approval Timeline -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-history me-2"></i>Approval Timeline
                    </h5>
                </div>
                <div class="card-body">
                    <div class="timeline">
                        <div class="timeline-item @(Model.SubmissionDate != null ? "completed" : "")">
                            <div class="timeline-marker bg-primary"></div>
                            <div class="timeline-content">
                                <h6 class="mb-1">Submitted</h6>
                                <p class="text-muted mb-0">@Model.SubmissionDate.ToString("dd MMM yyyy HH:mm")</p>
                            </div>
                        </div>

                        @if (Model.CoordinatorApprovalDate.HasValue)
                        {
                            <div class="timeline-item completed">
                                <div class="timeline-marker bg-warning"></div>
                                <div class="timeline-content">
                                    <h6 class="mb-1">Coordinator Approved</h6>
                                    <p class="text-muted mb-0">@Model.CoordinatorApprovalDate.Value.ToString("dd MMM yyyy HH:mm")</p>
                                    <p class="mb-0">
                                        <strong>Coordinator:</strong> @Model.Coordinator?.FullName
                                    </p>
                                    @if (!string.IsNullOrEmpty(Model.CoordinatorComments))
                                    {
                                        <p class="mb-0 mt-1">
                                            <strong>Notes:</strong> @Model.CoordinatorComments
                                        </p>
                                    }
                                </div>
                            </div>
                        }

                        @if (Model.ManagerApprovalDate.HasValue)
                        {
                            <div class="timeline-item completed">
                                <div class="timeline-marker @(Model.Status == ClaimStatus.ManagerApproved ? "bg-success" : "bg-danger")"></div>
                                <div class="timeline-content">
                                    <h6 class="mb-1">Final Decision - @Model.Status</h6>
                                    <p class="text-muted mb-0">@Model.ManagerApprovalDate.Value.ToString("dd MMM yyyy HH:mm")</p>
                                    <p class="mb-0">
                                        <strong>Manager:</strong> @Model.Manager?.FullName
                                    </p>
                                    @if (!string.IsNullOrEmpty(Model.ManagerComments))
                                    {
                                        <p class="mb-0 mt-1">
                                            <strong>Final Notes:</strong> @Model.ManagerComments
                                        </p>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Supporting Documents -->
            @if (Model.SupportingDocuments?.Any() == true)
            {
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-file-alt me-2"></i>Supporting Documents
                            <span class="badge bg-light text-dark ms-2">@Model.SupportingDocuments.Count</span>
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @foreach (var document in Model.SupportingDocuments)
                            {
                                <div class="col-md-6 mb-3">
                                    <div class="card document-card">
                                        <div class="card-body">
                                            <div class="d-flex align-items-center">
                                                <i class="fas fa-file @GetDocumentIconClass(document.DocumentType) me-3 fa-2x"></i>
                                                <div class="flex-grow-1">
                                                    <h6 class="card-title mb-1">@document.OriginalFileName</h6>
                                                    <p class="card-text small text-muted mb-1">
                                                        @document.DocumentType • @document.FileSizeDisplay
                                                    </p>
                                                    @if (!string.IsNullOrEmpty(document.Description))
                                                    {
                                                        <p class="card-text small mb-2">@document.Description</p>
                                                    }
                                                    <div class="btn-group btn-group-sm">
                                                        <a asp-controller="Manager"
                                                           asp-action="DownloadDocument"
                                                           asp-route-documentId="@document.DocumentId"
                                                           class="btn btn-outline-primary">
                                                            <i class="fas fa-download me-1"></i>Download
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="text-center mt-3">
                            <a asp-controller="Manager"
                               asp-action="DownloadAllDocuments"
                               asp-route-claimId="@Model.ClaimId"
                               class="btn btn-success">
                                <i class="fas fa-download me-2"></i>Download All Documents
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Right Column - Decision Information -->
        <div class="col-md-4">
            <!-- Final Decision Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-header @(Model.Status == ClaimStatus.ManagerApproved ? "bg-success" : "bg-danger") text-white">
                    <h5 class="mb-0">
                        <i class="fas @(Model.Status == ClaimStatus.ManagerApproved ? "fa-check-circle" : "fa-times-circle") me-2"></i>
                        Final Decision
                    </h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <i class="fas @(Model.Status == ClaimStatus.ManagerApproved ? "fa-check-circle text-success" : "fa-times-circle text-danger") fa-3x mb-3"></i>
                        <h4 class="@(Model.Status == ClaimStatus.ManagerApproved ? "text-success" : "text-danger")">
                            @Model.Status
                        </h4>
                    </div>

                    <table class="table table-borderless">
                        <tr>
                            <th width="40%">Decision Date:</th>
                            <td>@Model.ManagerApprovalDate?.ToString("dd MMM yyyy HH:mm")</td>
                        </tr>
                        <tr>
                            <th>Manager:</th>
                            <td>@Model.Manager?.FullName</td>
                        </tr>
                        <tr>
                            <th>Processing Time:</th>
                            <td>
                                @if (Model.CoordinatorApprovalDate.HasValue && Model.ManagerApprovalDate.HasValue)
                                {
                                    var processingTime = Model.ManagerApprovalDate.Value - Model.CoordinatorApprovalDate.Value;
                                    <span>@processingTime.Days day(s) @processingTime.Hours hour(s)</span>
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </td>
                        </tr>
                    </table>

                    @if (!string.IsNullOrEmpty(Model.ManagerComments))
                    {
                        <div class="mt-3">
                            <h6>Final Decision Notes:</h6>
                            <div class="alert @(Model.Status == ClaimStatus.ManagerApproved ? "alert-success" : "alert-danger")">
                                @Model.ManagerComments
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.CoordinatorComments))
                    {
                        <div class="mt-3">
                            <h6>Coordinator Notes:</h6>
                            <div class="alert alert-info">
                                @Model.CoordinatorComments
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-bolt me-2"></i>Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-controller="Manager"
                           asp-action="ProcessedClaims"
                           class="btn btn-outline-primary">
                            <i class="fas fa-arrow-left me-2"></i>Back to Processed Claims
                        </a>

                        @if (Model.SupportingDocuments?.Any() == true)
                        {
                            <a asp-controller="Manager"
                               asp-action="DownloadAllDocuments"
                               asp-route-claimId="@Model.ClaimId"
                               class="btn btn-outline-success">
                                <i class="fas fa-download me-2"></i>Download All Documents
                            </a>
                        }

                        <a href="javascript:window.print()" class="btn btn-outline-info">
                            <i class="fas fa-print me-2"></i>Print Details
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .timeline {
        position: relative;
        padding-left: 30px;
    }

    .timeline-item {
        position: relative;
        margin-bottom: 20px;
    }

    .timeline-marker {
        position: absolute;
        left: -30px;
        top: 0;
        width: 20px;
        height: 20px;
        border-radius: 50%;
        border: 3px solid #fff;
    }

    .timeline-content {
        padding: 10px;
        background: #f8f9fa;
        border-radius: 5px;
    }

    .timeline-item.completed .timeline-content {
        background: #e8f5e8;
    }

    .document-card {
        transition: transform 0.2s;
        border-left: 4px solid #0d6efd;
    }

        .document-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
</style>

@section Scripts {
    <script>
        // Initialize tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        });
    </script>
}

@functions {
    string GetStatusBadgeClass(ClaimStatus status)
    {
        return status switch
        {
            ClaimStatus.ManagerApproved => "bg-success",
            ClaimStatus.Rejected => "bg-danger",
            _ => "bg-secondary"
        };
    }

    string GetDocumentIconClass(DocumentType documentType)
    {
        return documentType switch
        {
            DocumentType.Timesheet => "fa-calendar text-primary",
            DocumentType.Invoice => "fa-file-invoice-dollar text-success",
            DocumentType.Receipt => "fa-receipt text-warning",
            DocumentType.Contract => "fa-file-contract text-info",
            DocumentType.Other => "fa-file text-secondary",
            _ => "fa-file text-secondary"
        };
    }
}