@model ContractMonthlyClaimSystem.Models.ViewModels.CoordinatorDashboardViewModel
@{
    ViewData["Title"] = "Coordinator Dashboard";
}

<div class="container-fluid">
    <!-- Welcome Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <h2 class="card-title">
                                <i class="fas fa-user-tie me-2"></i>Welcome, Coordinator!
                            </h2>
                            <p class="card-text mb-0">
                                Manage and approve monthly claims from lecturers
                            </p>
                        </div>
                        <div class="col-md-4 text-end">
                            <div class="bg-light text-dark p-3 rounded">
                                <h5 class="mb-1">Current Month</h5>
                                <h4 class="text-primary mb-0">@DateTime.Now.ToString("MMMM yyyy")</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@Model.PendingClaimsCount</h4>
                            <p class="card-text">Pending Claims</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-clock fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@Model.ApprovedThisMonthCount</h4>
                            <p class="card-text">Approved This Month</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-check-circle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@Model.TotalClaimsCount</h4>
                            <p class="card-text">Total Claims</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-file-invoice fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-secondary">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@Model.TotalLecturersCount</h4>
                            <p class="card-text">Active Lecturers</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-chalkboard-teacher fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Pending Claims Section -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-clock me-2"></i>Pending Claims for Approval
                        <span class="badge bg-light text-dark ms-2">@Model.PendingClaims.Count</span>
                    </h4>
                </div>
                <div class="card-body">
                    @if (Model.PendingClaims.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Claim ID</th>
                                        <th>Lecturer</th>
                                        <th>Employee Number</th>
                                        <th>Claim Month</th>
                                        <th>Hours</th>
                                        <th>Amount</th>
                                        <th>Date Submitted</th>
                                        <th>Documents</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var claim in Model.PendingClaims)
                                    {
                                        <tr>
                                            <td>#@claim.ClaimId</td>
                                            <td>
                                                <strong>@claim.Lecturer?.FullName</strong>
                                                <br>
                                                <small class="text-muted">@claim.Lecturer?.Email</small>
                                            </td>
                                            <td>@claim.Lecturer?.EmployeeNumber</td>
                                            <td>@claim.DisplayMonth</td>
                                            <td>@claim.TotalHours.ToString("N1")</td>
                                            <td class="fw-bold text-success">R @claim.TotalAmount.ToString("N2")</td>
                                            <td>@claim.SubmissionDate.ToString("dd MMM yyyy")</td>
                                            <td>
                                                @if (claim.SupportingDocuments?.Any() == true)
                                                {
                                                    <span class="badge bg-info"
                                                          title="@string.Join(", ", claim.SupportingDocuments.Select(d => d.OriginalFileName))">
                                                        <i class="fas fa-file me-1"></i>@claim.SupportingDocuments.Count
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">No documents</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group-vertical btn-group-sm" role="group">
                                                    <a asp-controller="Coordinator"
                                                       asp-action="ClaimDetails"
                                                       asp-route-id="@claim.ClaimId"
                                                       class="btn btn-outline-primary mb-1">
                                                        <i class="fas fa-eye me-1"></i>Review
                                                    </a>
                                                    <button type="button"
                                                            class="btn btn-outline-success mb-1"
                                                            onclick="approveClaim(@claim.ClaimId, '@claim.Lecturer?.FullName', '@claim.DisplayMonth')">
                                                        <i class="fas fa-check me-1"></i>Approve
                                                    </button>
                                                    <button type="button"
                                                            class="btn btn-outline-danger"
                                                            onclick="rejectClaim(@claim.ClaimId, '@claim.Lecturer?.FullName', '@claim.DisplayMonth')">
                                                        <i class="fas fa-times me-1"></i>Reject
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                            <h5 class="text-success">All Caught Up!</h5>
                            <p class="text-muted">There are no pending claims requiring your approval.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Recently Processed Claims -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-history me-2"></i>Recently Processed Claims
                    </h4>
                </div>
                <div class="card-body">
                    @if (Model.RecentlyProcessedClaims.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Claim ID</th>
                                        <th>Lecturer</th>
                                        <th>Claim Month</th>
                                        <th>Hours</th>
                                        <th>Amount</th>
                                        <th>Status</th>
                                        <th>Processed Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var claim in Model.RecentlyProcessedClaims)
                                    {
                                        <tr>
                                            <td>#@claim.ClaimId</td>
                                            <td>@claim.Lecturer?.FullName</td>
                                            <td>@claim.DisplayMonth</td>
                                            <td>@claim.TotalHours.ToString("N1")</td>
                                            <td>R @claim.TotalAmount.ToString("N2")</td>
                                            <td>
                                                <span class="badge @GetStatusBadgeClass(claim.Status)">
                                                    @claim.Status
                                                </span>
                                            </td>
                                            <td>
                                                @if (claim.CoordinatorApprovalDate.HasValue)
                                                {
                                                    @claim.CoordinatorApprovalDate.Value.ToString("dd MMM yyyy")
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Not processed</span>
                                                }
                                            </td>
                                            <td>
                                                <a asp-controller="Coordinator"
                                                   asp-action="ProcessedClaimDetails"
                                                   asp-route-id="@claim.ClaimId"
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye"></i> View
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <div class="text-center mt-3">
                                <a asp-controller="Coordinator" asp-action="ProcessedClaims" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-list me-1"></i>View All Processed Claims
                                </a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No Processed Claims</h5>
                            <p class="text-muted">No claims have been processed yet.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Approval Modal -->
<div class="modal fade" id="approvalModal" tabindex="-1" aria-labelledby="approvalModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="approvalModalLabel">
                    <i class="fas fa-check-circle me-2"></i>Approve Claim
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to approve this claim?</p>
                <div class="alert alert-info">
                    <strong id="approvalLecturerName"></strong><br>
                    <span id="approvalClaimMonth"></span>
                </div>
                <div class="mb-3">
                    <label for="approvalNotes" class="form-label">Approval Notes (Optional)</label>
                    <textarea class="form-control" id="approvalNotes" rows="3"
                              placeholder="Add any notes or comments..."></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success" id="confirmApproveBtn">Approve Claim</button>
            </div>
        </div>
    </div>
</div>

<!-- Rejection Modal -->
<div class="modal fade" id="rejectionModal" tabindex="-1" aria-labelledby="rejectionModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="rejectionModalLabel">
                    <i class="fas fa-times-circle me-2"></i>Reject Claim
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to reject this claim?</p>
                <div class="alert alert-warning">
                    <strong id="rejectionLecturerName"></strong><br>
                    <span id="rejectionClaimMonth"></span>
                </div>
                <div class="mb-3">
                    <label for="rejectionReason" class="form-label">Rejection Reason *</label>
                    <textarea class="form-control" id="rejectionReason" rows="3"
                              placeholder="Please provide a reason for rejection..." required></textarea>
                    <div class="form-text">This reason will be shared with the lecturer.</div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmRejectBtn">Reject Claim</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let currentClaimId = null;

        function approveClaim(claimId, lecturerName, claimMonth) {
            currentClaimId = claimId;
            document.getElementById('approvalLecturerName').textContent = lecturerName;
            document.getElementById('approvalClaimMonth').textContent = `Claim for ${claimMonth}`;
            document.getElementById('approvalNotes').value = '';

            const modal = new bootstrap.Modal(document.getElementById('approvalModal'));
            modal.show();
        }

        function rejectClaim(claimId, lecturerName, claimMonth) {
            currentClaimId = claimId;
            document.getElementById('rejectionLecturerName').textContent = lecturerName;
            document.getElementById('rejectionClaimMonth').textContent = `Claim for ${claimMonth}`;
            document.getElementById('rejectionReason').value = '';

            const modal = new bootstrap.Modal(document.getElementById('rejectionModal'));
            modal.show();
        }

        document.getElementById('confirmApproveBtn').addEventListener('click', function() {
            const notes = document.getElementById('approvalNotes').value;
            submitApproval(currentClaimId, true, notes);
        });

        document.getElementById('confirmRejectBtn').addEventListener('click', function() {
            const reason = document.getElementById('rejectionReason').value;
            if (!reason.trim()) {
                alert('Please provide a rejection reason.');
                return;
            }
            submitApproval(currentClaimId, false, reason);
        });

        function submitApproval(claimId, isApproved, notes) {
            // Show loading state
            const button = isApproved ? document.getElementById('confirmApproveBtn') : document.getElementById('confirmRejectBtn');
            const originalText = button.innerHTML;
            button.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...';
            button.disabled = true;

            // Create form submission
            const form = document.createElement('form');
            form.method = 'post';
            form.action = '/Coordinator/ProcessClaim';

            // Add anti-forgery token
            const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
            const tokenInput = document.createElement('input');
            tokenInput.type = 'hidden';
            tokenInput.name = '__RequestVerificationToken';
            tokenInput.value = token;
            form.appendChild(tokenInput);

            // Add claim ID
            const claimIdInput = document.createElement('input');
            claimIdInput.type = 'hidden';
            claimIdInput.name = 'claimId';
            claimIdInput.value = claimId;
            form.appendChild(claimIdInput);

            // Add approval status
            const statusInput = document.createElement('input');
            statusInput.type = 'hidden';
            statusInput.name = 'isApproved';
            statusInput.value = isApproved;
            form.appendChild(statusInput);

            // Add notes/reason
            const notesInput = document.createElement('input');
            notesInput.type = 'hidden';
            notesInput.name = 'notes';
            notesInput.value = notes;
            form.appendChild(notesInput);

            // Submit the form
            document.body.appendChild(form);
            form.submit();
        }

        // Close modals on hidden
        document.getElementById('approvalModal').addEventListener('hidden.bs.modal', function() {
            currentClaimId = null;
        });

        document.getElementById('rejectionModal').addEventListener('hidden.bs.modal', function() {
            currentClaimId = null;
        });
    </script>
}

@functions {
    string GetStatusBadgeClass(ClaimStatus status)
    {
        return status switch
        {
            ClaimStatus.Draft => "bg-secondary",
            ClaimStatus.Submitted => "bg-warning",
            ClaimStatus.CoordinatorApproved => "bg-info",
            ClaimStatus.ManagerApproved => "bg-success",
            ClaimStatus.Paid => "bg-success",
            ClaimStatus.Rejected => "bg-danger",
            _ => "bg-secondary"
        };
    }
}