@* Views/Test/PasswordHashTester.cshtml *@
@{
    ViewData["Title"] = "Password Hash Tester";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">🔐 Password Hash Generator & Tester</h4>
                </div>
                <div class="card-body">
                    <!-- Alerts -->
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @ViewBag.Error
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (ViewBag.Success != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @ViewBag.Success
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (ViewBag.CreatedUsername != null)
                    {
                        <div class="alert alert-info">
                            <h6>🎉 User Created Successfully!</h6>
                            <p><strong>Username:</strong> @ViewBag.CreatedUsername</p>
                            <p><strong>Password:</strong> @ViewBag.CreatedPassword</p>
                            <p><strong>Role:</strong> @ViewBag.CreatedRole</p>
                            <p><strong>Stored Hash:</strong> <code class="bg-light p-1">@ViewBag.CreatedHash</code></p>
                        </div>
                    }

                    @if (ViewBag.Hash != null)
                    {
                        <div class="alert @(ViewBag.IsSuccess ? "alert-success" : "alert-danger")">
                            <h5>🔍 Hash Results:</h5>
                            <p><strong>Password:</strong> <code>@ViewBag.Password</code></p>
                            <p><strong>Generated Hash:</strong> <code class="bg-light p-2 d-block">@ViewBag.Hash</code></p>
                            <p>
                                <strong>Verification:</strong>
                                <span class="badge @(ViewBag.IsSuccess ? "bg-success" : "bg-danger")">
                                    @ViewBag.VerificationResult
                                </span>
                            </p>
                        </div>
                    }

                    <!-- Generate Hash Form -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card mb-4">
                                <div class="card-header bg-success text-white">
                                    <h6 class="mb-0">🔄 Generate Hash</h6>
                                </div>
                                <div class="card-body">
                                    <form method="post" asp-action="GenerateHash">
                                        <div class="mb-3">
                                            <label for="password" class="form-label">Enter Password:</label>
                                            <input type="password" class="form-control" id="password" name="password" required
                                                   placeholder="Enter password to hash">
                                            <div class="form-check mt-2">
                                                <input type="checkbox" class="form-check-input" id="showPassword">
                                                <label class="form-check-label" for="showPassword">Show password</label>
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-success w-100">Generate Hash</button>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card mb-4">
                                <div class="card-header bg-warning text-dark">
                                    <h6 class="mb-0">✅ Verify Hash</h6>
                                </div>
                                <div class="card-body">
                                    <form method="post" asp-action="VerifyHash">
                                        <div class="mb-3">
                                            <label for="verifyPassword" class="form-label">Password to Verify:</label>
                                            <input type="password" class="form-control" id="verifyPassword" name="password" required
                                                   placeholder="Enter password">
                                        </div>
                                        <div class="mb-3">
                                            <label for="hashInput" class="form-label">Hash to Verify Against:</label>
                                            <textarea class="form-control" id="hashInput" name="hash" rows="3" required
                                                      placeholder="Paste the hash here">@ViewBag.Hash</textarea>
                                        </div>
                                        <button type="submit" class="btn btn-warning w-100">Verify Hash</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Create Test User Form -->
                    <div class="card">
                        <div class="card-header bg-info text-white">
                            <h6 class="mb-0">👥 Create Test User</h6>
                        </div>
                        <div class="card-body">
                            <form method="post" asp-action="CreateTestUser">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label for="username" class="form-label">Username:</label>
                                            <input type="text" class="form-control" id="username" name="username" required
                                                   placeholder="e.g., test.user">
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label for="userPassword" class="form-label">Password:</label>
                                            <input type="password" class="form-control" id="userPassword" name="password" required
                                                   placeholder="Enter password">
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label for="role" class="form-label">Role:</label>
                                            <select class="form-select" id="role" name="role" required>
                                                <option value="">Select Role</option>
                                                <option value="Lecturer">Lecturer</option>
                                                <option value="ProgrammeCoordinator">Programme Coordinator</option>
                                                <option value="AcademicManager">Academic Manager</option>
                                                <option value="Administrator">Administrator</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-info w-100">Create Test User</button>
                            </form>
                        </div>
                    </div>

                    <!-- Current Database Hashes -->
                    <div class="card mt-4">
                        <div class="card-header bg-secondary text-white">
                            <h6 class="mb-0">📊 Current Database Hashes</h6>
                        </div>
                        <div class="card-body">
                            <p class="text-muted">Current users and their password hashes in the database:</p>
                            <div id="hashList" class="bg-light p-3" style="max-height: 300px; overflow-y: auto;">
                                <div class="text-center">
                                    <div class="spinner-border spinner-border-sm" role="status">
                                        <span class="visually-hidden">Loading...</span>
                                    </div>
                                    Loading user hashes...
                                </div>
                            </div>
                            <button onclick="loadHashes()" class="btn btn-outline-secondary btn-sm mt-2">
                                🔄 Refresh Hashes
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Show/hide password
        document.getElementById('showPassword').addEventListener('change', function() {
            var passwordInput = document.getElementById('password');
            var verifyPasswordInput = document.getElementById('verifyPassword');
            var userPasswordInput = document.getElementById('userPassword');

            passwordInput.type = this.checked ? 'text' : 'password';
            if (verifyPasswordInput) verifyPasswordInput.type = this.checked ? 'text' : 'password';
            if (userPasswordInput) userPasswordInput.type = this.checked ? 'text' : 'password';
        });

        // Load current database hashes
        async function loadHashes() {
            const hashList = document.getElementById('hashList');
            hashList.innerHTML = '<div class="text-center"><div class="spinner-border spinner-border-sm"></div> Loading...</div>';

            try {
                const response = await fetch('/Test/GetUserHashes');
                const users = await response.json();

                if (users.error) {
                    hashList.innerHTML = `<div class="text-danger">Error: ${users.error}</div>`;
                    return;
                }

                if (users.length === 0) {
                    hashList.innerHTML = '<div class="text-muted">No users found in database.</div>';
                    return;
                }

                let html = '';
                users.forEach(user => {
                    const hashPreview = user.passwordHash
                        ? user.passwordHash.substring(0, 50) + '...'
                        : '<span class="text-danger">NULL</span>';

                    html += `<div class="mb-3 p-2 border-bottom">
                        <div class="fw-bold">${user.userName}</div>
                        <div class="small text-muted">Email: ${user.email}</div>
                        <div class="small">
                            <strong>Hash:</strong>
                            <code class="text-break" title="${user.passwordHash || 'No hash'}">${hashPreview}</code>
                        </div>
                    </div>`;
                });

                hashList.innerHTML = html;
            } catch (error) {
                hashList.innerHTML = '<div class="text-danger">Error loading hashes: ' + error.message + '</div>';
            }
        }

        // Load hashes when page loads
        document.addEventListener('DOMContentLoaded', loadHashes);
    </script>
}